@page "{id:int}"
@model Closet.WEB.Pages.Roupa
@{
    ViewData["Title"] = "Roupa";
}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a class="nav-home" asp-page="/Index">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Roupas</li>
  </ol>
</nav>


    <div class="container">
        <div class="img-roupa">
                <img class="roupa-img" src="@Model.roupa.FotoRoupa">
        </div>
        <div class="texto-roupa">
            <p class="roupa-nome">@Model.roupa.NomeRoupa</p>
            <p class="roupa-preco">R$@Model.roupa.PrecoRoupa</p>
            <button class="roupa-compra">Comprar</button>
            <!-- ABERTURA DA DESCRICAO -->
            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h5 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne"
                            aria-expanded="true" aria-controls="collapseOne">
                            Descrição
                        </button>
                        </h5>
                    </div>

                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                        data-parent="#accordionExample">
                    <div class="card-body">
                        <p>@Model.roupa.DescricaoRoupa</p>
                    </div>
                </div>
            </div>
            </div>
            <!-- FECHAMENTO DA DESCRICAO -->
        </div>
    </div>
