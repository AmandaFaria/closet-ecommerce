@page
@model Closet.WEB.Pages.Shared.Cadastro
@{
    ViewData["Title"] = "Cadastro";
}

<h1 class="centralizar titulologin">@ViewData["Title"]</h1>

<p class="bemvindo centralizar">Olá, seja bem-vindo(a) =)</p>
<form>
    <div class="mb-3">
        <label class="formEmail" for="inputNome">Nome:</label>
        <input type="text" class="form-control" id="exampleInputNome">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputSobrenome">Sobrenome:</label>
        <input type="text" class="form-control" id="exampleInputSobrenome">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputEmail">Email:</label>
        <input type="email" class="form-control" id="exampleInputEmail">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputSenha">Senha:</label>
        <input type="password" class="form-control" id="exampleInputSenha">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputSenha">Confirmar Senha:</label>
        <input type="password" class="form-control" id="exampleInputSenha">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputTel">Telefone:</label>
        <input type="tel" class="form-control" id="exampleInputTel">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputCep">Cep:</label>
        <input type="text" class="form-control" id="exampleInputCep">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputRua">Rua:</label>
        <input type="text" class="form-control" id="exampleInputRua">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputEstado">Estado:</label>
        <input type="text" class="form-control" id="exampleInputEstado">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputCidade">Cidade:</label>
        <input type="text" class="form-control" id="exampleInputCidade">
    </div>
    <div class="mb-3">
        <label class="formEmail" for="inputBairro">Bairro:</label>
        <input type="text" class="form-control" id="exampleInputBairro">
    </div>
    <button type="submit" class="btn">Cadastrar</button>
</form>
<p class="perguntaCadastro">Já possui uma conta? <a class="msgCadastro" asp-page="/Login">Entrar</a></p>