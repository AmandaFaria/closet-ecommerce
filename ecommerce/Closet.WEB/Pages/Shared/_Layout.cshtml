<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Closet.WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Closet.WEB.styles.css" asp-append-version="true" />
    <!-- No cabeçalho do seu HTML -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-iqoXlwx1Y09MqeU/gXoSWz0GzjCru1UwZl+bbJmv2H67T/rp0VR8RaXr8Sdx8u3Akg4zOg+/Zb6KzVIoRkXd9Q=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img class="logo" asp-page="/Index" src="~/img/The closet 2.png" alt="logo">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navegacao" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="navegacao2" asp-area="" asp-page="/Privacy">Roupas</a>
                            <ul class="submenu">
                                <li class="item-submenu">
                                    <a asp-page="/AdicionarRoupa">Adicionar nova roupa</a>
                                </li>
                                <li>
                                    <a asp-page="/AtualizarRoupa">Atualizar roupa</a>
                                </li>
                                <li>
                                    <a asp-page="/DeletarRoupa">Deletar roupa</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="navegacao2" asp-area="" asp-page="/Categorias">Categorias</a>
                            <ul class="submenu">
                                <li class="item-submenu">
                                    <a asp-page="/AdicionarCategoria">Adicionar nova categoria</a>
                                </li>
                                <li>
                                    <a asp-page="/AtualizarCategoria">Atualizar categoria</a>
                                </li>
                                <li>
                                    <a asp-page="/DeletarCategoria">Deletar categoria</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <img src="~/img/user-solid.svg" class="navegacao3" asp-area="">
                            <ul class="submenu2">
                                <li class="item-submenu">
                                    <a asp-page="/Login">Fazer login</a>
                                </li>
                                <li>
                                    <a asp-page="/Cadastro">Criar conta</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="./AtualizarRoupa">
                                <img src="~/img/cart-shopping-solid.svg" class="navegacao4">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Closet.WEB - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
